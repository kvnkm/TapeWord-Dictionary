{
  "description": "Allows word-definition searches via right-click context menu.",
  "manifest_version": 2,
  "name": "WordStar",
  "version": "1.0",
  "author": "Kevin Kim",
  "homepage_url": "https://github.com/kvnkm/WordStar",

  "background": {
    "scripts": ["dist/background/index.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/dist/contentScript/index.js"]
    }
  ],

  "permissions": ["activeTab", "contextMenus", "https://www.lexico.com/"]
}
